{% extends 'page.njk' %}

{% set 'title' = 'News' %}
{% set 'description' = 'An Example of JsonPostsIndex Component' %}

{% block content %}
  <div id="app">
    <json-posts-index
      api-url="{{ site.url }}/collections/news/index.json"
      page-path="./page">
    </json-posts-index>
  </div>
{% endblock %}

{% block script %}
  <script>
    var app = new Vue({
      el: '#app',
    })
  </script>
{% endblock %}
